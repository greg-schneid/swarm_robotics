{
  "name": "ros2-jazzy-dev",
  "privileged": true,
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "upgradePackages": false,
      "username": "ubuntu",
      "uid": "1000",
      "gid": "1000"
    }
  },
  "updateRemoteUserUID": true,
  "remoteUser": "ubuntu",
  "containerUser": "ubuntu",
  "workspaceFolder": "/workspaces/swarm_robotics",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/swarm_robotics,type=bind",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/ubuntu/.ssh,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/ubuntu/.gitconfig,type=bind,consistency=cached"
  ],
  "postCreateCommand": "bash -c 'sudo chown -R ubuntu:ubuntu /workspaces/swarm_robotics 2>/dev/null || true && mkdir -p /workspaces/swarm_robotics/src && echo \"if [ -f /workspaces/swarm_robotics/install/setup.bash ]; then source /workspaces/swarm_robotics/install/setup.bash; fi\" >> ~/.bashrc && source /opt/ros/jazzy/setup.bash'",
  "containerEnv": {
    "GIT_EDITOR": "nano"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "ms-vscode.cmake-tools",
        "ms-vscode.cmake",
        "ms-azuretools.vscode-docker",
        "visualstudioexptteam.intellicode-api-usage-examples",
        "visualstudioexptteam.vscodeintellicode",
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}